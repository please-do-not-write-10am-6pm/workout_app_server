generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workout {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  description   String?
  length        Int?
  location      String?
  exercises     Exercise[]
}

model Exercise {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  reps          Int
  sets          Int?
  weight        Int?
  unit          String?
  workout       Workout?      @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  workoutId     Int?
}
